{
  "name": "master-electron",
  "version": "1.0.0",
  "description": "Master Electron Course Code",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "watch": "nodemon --exec \"taskkill /IM electron.exe /F & electron .\" main.js",
    "dev": "nodemon --exec \"taskkill /IM electron.exe /F & electron .\" main.js",
    "reset": "git reset --hard",
    "debug": "electron --remote-debugging-port=9222 .",
    "nodeDebug": "electron --inspect=9229 ."
  },
  "repository": "https://github.com/stackacademytv/master-electron",
  "keywords": [
    "Electron",
    "Master Electron",
    "demo"
  ],
  "author": "GitHub, Stackacademytv",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^9.0.0",
    "nodemon": "^2.0.0"
  },
  "dependencies": {
    "electron-window-state": "^5.0.3"
  },
  "config": {
    "electron_port": 3000,
    "env": "development"
  }
}
